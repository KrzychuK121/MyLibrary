@model IEnumerable<MojaBiblioteka.Models.Entities.Persons.Author>

@{
    ViewData["Title"] = "Spis autorów";
}

<h1>Spis</h1>

<p>
    <a asp-action="Create">Dodaj autora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-capitalize">
                @Html.DisplayFor(modelItem => item.FirstName.FirstName)
            </td>
            <td class="text-capitalize">
                @Html.DisplayFor(modelItem => item.Surname.Surname)
            </td>
            <td>
                @if(item.DateOfBirth is null)
                {
                    @:Brak
                }else{
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorId">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.AuthorId">Opis</a> |
                <a asp-action="Delete" asp-route-id="@item.AuthorId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
