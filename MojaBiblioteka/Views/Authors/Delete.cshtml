@model MojaBiblioteka.Models.Entities.Persons.Author

@{
    ViewData["Title"] = "Usuń autora";
}

<h1>Usuwanie</h1>

<h3>Jesteś pewny, że chcesz usunąć?</h3>
<div>
    <h4>Autor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName.FirstName)
        </dt>
        <dd class="col-sm-10 text-capitalize">
            @Html.DisplayFor(model => model.FirstName.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname.Surname)
        </dt>
        <dd class="col-sm-10 text-capitalize">
            @Html.DisplayFor(model => model.Surname.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.DateOfBirth is null)
            {
                @:Brak
            }
            else
            {
                @Html.DisplayFor(model => model.DateOfBirth)
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
